<Window x:Class="Kryptografia1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kryptografia1"
        mc:Ignorable="d"
        Title="Podstawowe moduły" Height="450" Width="800">
    <TabControl Margin="10">
        <TabItem Header="Rail Fence">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Label Margin="10">Tekst jawny:</Label>
                <TextBox Name="tekstJawnyRailFenceTextBox" Grid.Column="1" Margin="10" VerticalAlignment="Top" Padding="10"/>

                <Label Grid.Row="1" Margin="10">Klucz:</Label>
                <TextBox Name="kluczRailFenceTextBox" Grid.Column="1" Grid.Row="1"  Margin="10" VerticalAlignment="Top" Padding="10"/>

                <Label Grid.Row="2" Margin="10">Szyfrogram:</Label>
                <TextBox Grid.Row="2" Grid.Column="1" Name="szyfrogramRailFenceTextBox"  Margin="10" VerticalAlignment="Top" Padding="10"/>

                <Button Name="szyfrujRailFenceButton" Click="szyfrujRailFence_Click" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Padding="20 5" Margin="10">Szyfruj</Button>
                <Button Name="deszyfrujRailFenceButton" Click="deszyfrujRailFenceButton_Click" Grid.Row="3"  Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Padding="20 5" Margin="10">Deszyfruj</Button>
            </Grid>
        </TabItem>
        <TabItem Header="Przestawienia macierzowe A">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Label Margin="10">Tekst jawny:</Label>
                <TextBox Name="tekstJawnyPrzestawieniaATextBox" Grid.Column="1" Margin="10" VerticalAlignment="Top" Padding="10"/>

                <Label Grid.Row="1" Margin="10">Klucz:</Label>
                <TextBox Name="kluczPrzestawieniaATextBox" Grid.Column="1" Grid.Row="1"  Margin="10" VerticalAlignment="Top" Padding="10"/>

                <Label Grid.Row="2" Margin="10">Szyfrogram:</Label>
                <TextBox Grid.Row="2" Grid.Column="1" Name="szyfrogramPrzestawieniaATextBox"  Margin="10" VerticalAlignment="Top" Padding="10"/>

                <Button Name="szyfrujPrzestawieniaAButton" Click="szyfrujPrzestawieniaAButton_Click" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Padding="20 5" Margin="10">Szyfruj</Button>
                <Button Name="deszyfrujPrzestawieniaAButton" Click="deszyfrujPrzestawieniaAButton_Click" Grid.Row="3"  Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Padding="20 5" Margin="10">Deszyfruj</Button>
            </Grid>
        </TabItem>
        <TabItem Header="Przestawienia macierzowe B">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Label Margin="10">Tekst jawny:</Label>
                <TextBox Name="tekstJawnyPrzestawieniaBTextBox" Grid.Column="1" Margin="10" VerticalAlignment="Top" Padding="10"/>

                <Label Grid.Row="1" Margin="10">Klucz:</Label>
                <TextBox Name="kluczPrzestawieniaBTextBox" Grid.Column="1" Grid.Row="1"  Margin="10" VerticalAlignment="Top" Padding="10"/>

                <Label Grid.Row="2" Margin="10">Szyfrogram:</Label>
                <TextBox Grid.Row="2" Grid.Column="1" Name="szyfrogramPrzestawieniaBTextBox"  Margin="10" VerticalAlignment="Top" Padding="10"/>

                <Button Name="szyfrujPrzestawieniaBButton" Click="szyfrujPrzestawieniaBButton_Click" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Padding="20 5" Margin="10">Szyfruj</Button>
                <Button Name="deszyfrujPrzestawieniaBButton" Click="deszyfrujPrzestawieniaBButton_Click" Grid.Row="3"  Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Padding="20 5" Margin="10">Deszyfruj</Button>
            </Grid>
        </TabItem>
        <TabItem Header="Przestawienia macierzowe C">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Label Margin="10">Tekst jawny:</Label>
                <TextBox Name="tekstJawnyPrzestawieniaCTextBox" Grid.Column="1" Margin="10" VerticalAlignment="Top" Padding="10"/>

                <Label Grid.Row="1" Margin="10">Klucz:</Label>
                <TextBox Name="kluczPrzestawieniaCTextBox" Grid.Column="1" Grid.Row="1"  Margin="10" VerticalAlignment="Top" Padding="10"/>

                <Label Grid.Row="2" Margin="10">Szyfrogram:</Label>
                <TextBox Grid.Row="2" Grid.Column="1" Name="szyfrogramPrzestawieniaCTextBox"  Margin="10" VerticalAlignment="Top" Padding="10"/>

                <Button Name="szyfrujPrzestawieniaCButton" Click="szyfrujPrzestawieniaCButton_Click" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Padding="20 5" Margin="10">Szyfruj</Button>
                <Button Name="deszyfrujPrzestawieniaCButton" Click="deszyfrujPrzestawieniaCButton_Click" Grid.Row="3"  Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Padding="20 5" Margin="10">Deszyfruj</Button>
            </Grid>
        </TabItem>
        <TabItem Header="Cezar">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <Label Margin="10">Tekst jawny:</Label>
                <TextBox Name="tekstJawnyCezarTextBox" Grid.Column="1" Margin="10" VerticalAlignment="Top" Padding="10"/>

                <GroupBox Header="Klucz" Grid.Row="1" Grid.ColumnSpan="2" Margin="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        
                        <Label Margin="10">a:</Label>
                        <TextBox Name="kluczACezarTextBox" Grid.Column="1"  Margin="10" VerticalAlignment="Top" Padding="10"/>
                        <Label Margin="10" Grid.Column="2">b:</Label>
                        <TextBox Name="kluczBCezarTextBox" Grid.Column="3"  Margin="10" VerticalAlignment="Top" Padding="10"/>
                        <Label Margin="10" Grid.Column="4">n:</Label>
                        <TextBox Name="kluczNCezarTextBox" Grid.Column="5"  Margin="10" VerticalAlignment="Top" Padding="10"/>

                    </Grid>
                </GroupBox>

                <Label Grid.Row="2" Margin="10">Szyfrogram:</Label>
                <TextBox Grid.Row="2" Grid.Column="1" Name="szyfrogramCezarTextBox"  Margin="10" VerticalAlignment="Top" Padding="10"/>

                <Button Name="szyfrujCezarButton" Click="szyfrujCezarButton_Click" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Padding="20 5" Margin="10">Szyfruj</Button>
                <Button Name="deszyfrujCezarButton" Click="deszyfrujCezarButton_Click" Grid.Row="3"  Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Padding="20 5" Margin="10">Deszyfruj</Button>
            </Grid>
        </TabItem>
        <TabItem Header="Szyfr Vigenère'a">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Label Margin="10">Tekst jawny:</Label>
                <TextBox Name="tekstJawnyVigenerTextBox" Grid.Column="1" Margin="10" VerticalAlignment="Top" Padding="10"/>

                <Label Grid.Row="1" Margin="10">Klucz:</Label>
                <TextBox Name="kluczVigenerTextBox" Grid.Column="1" Grid.Row="1"  Margin="10" VerticalAlignment="Top" Padding="10"/>

                <Label Grid.Row="2" Margin="10">Szyfrogram:</Label>
                <TextBox Grid.Row="2" Grid.Column="1" Name="szyfrogramVigenerTextBox"  Margin="10" VerticalAlignment="Top" Padding="10"/>

                <Button Name="szyfrujVigenerButton" Click="szyfrujVigenerButton_Click" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Padding="20 5" Margin="10">Szyfruj</Button>
                <Button Name="deszyfrujVigenerButton" Click="deszyfrujVigenerButton_Click" Grid.Row="3"  Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Padding="20 5" Margin="10">Deszyfruj</Button>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
